<queries>

    <contact>
        <name>Dave Morris</name>
        <url>https://github.com/Zarquan</url>
    </contact>
    <publisher>
        <name>The Royal Observatory, Edinburgh</name>
        <url>http://www.roe.ac.uk/</url>
    </publisher>

    <query uuid=''>

        <dataset>http://osa.roe.ac.uk/</dataset>

        <descrption>
            <![CDATA[
            As simple example.
            ]]>
        <descrption>

        <adql version='adql-2.1' valid='true'>
            <![CDATA[
            SELECT
                sourceid
            FROM
                atlasSource
            WHERE
                CONTAINS(
                    POINT(
                        25.0,
                        -19.5
                        ),
                    CIRCLE(
                        25.4,
                        -20.0,
                        1
                        )
                    ) = 1
            ]]>
        </adql>

        <!--+
            | The list of options, listing the full set of geometry functions.
            +-->
        <options>
            <option>
                <type>ivo://ivoa.net/std/TAPRegExt#features-adql-geo</type>
            </option>
        </options>

    </query>

    <query uuid=''>

        <dataset>http://osa.roe.ac.uk/</dataset>

        <descrption>
            <![CDATA[
            As simple example.
            ]]>
        <descrption>

